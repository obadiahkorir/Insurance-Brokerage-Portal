@model KYM_Portal.Models.Login

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Majani Portal | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/assets/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="container fixed-top" style="background-color:#006b63;">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="row">
                        <center style="font-size:24px;color:white;text-align:center;"> MAJANI PORTAL</center>
                    </div>
                    <div class="nav-collapse">
                        <ul class="nav pull-right"></ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
                <!-- /container -->
            </div>
            <!-- /navbar-inner -->
        </div>
    </div>

    <div class="login-box">

        <div class="login-logo">
            <a href="#"><b>Majani Portal</b></a>

        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
               @if (TempData["error"] != null)
               {
                <div class="alert alert-danger alert-dismissible fade show" id="alert-danger" role="alert">
                    @TempData["error"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>

               }
               else if(TempData["success"] != null)
               {
                <div class="alert alert-success alert-dismissible fade show" id="alert-success" role="alert">
                    @TempData["success"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
               }
                <p class="login-box-msg">Sign in to Portal</p>
                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Employee Number/Id Number</label><br />
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "employee Number/Id Number", @required = "required" } })

                    </div>


                       

                        <div class="row">

                            <div class="col-4">
                                <input type="submit" value="Reset Password" class="btn btn-primary btn-lg" />
                            </div>
                        </div>
                }
                <div class="social-auth-links text-center mb-3">

                </div>
                <!-- /.social-auth-links -->
                
                <p class="mb-0">
                    <a href="@Url.Action("Login","Home")" class="text-center">Login</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/assets/dist/js/adminlte.min.js"></script>
</body>
</html>




